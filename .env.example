# CuraAI Frontend Environment Variables
# Copy this file to .env and fill in your actual credentials

# Google OAuth2 Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_PROJECT_ID=your-google-project-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
GOOGLE_TOKEN_URI=https://oauth2.googleapis.com/token
GOOGLE_AUTH_PROVIDER_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
GOOGLE_REDIRECT_URI=https://your-app-domain.com/

# Backend API Configuration
BACKEND_URL=http://127.0.0.1:8000

# OpenAI API Configuration (for backend)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Email Configuration (for backend agent)
EMAIL_SENDER=sender_email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password-here
EMAIL_RECEIVER=receiver_email@example.com

